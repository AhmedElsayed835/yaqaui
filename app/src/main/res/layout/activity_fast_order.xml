<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FastOrder"
    android:background="@drawable/order_big_background"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="399dp"
        android:layout_height="623dp"
        android:background="@drawable/order_background"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/order_background"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingTop="5dp"
                android:paddingRight="25dp"
                android:text="طلب سريع"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="83dp">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="89dp"
                    android:layout_height="47dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="185dp"
                    android:text="التاريخ"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="51dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="-235dp"
                    android:layout_toLeftOf="@+id/textView36"
                    app:srcCompat="@drawable/date" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:orientation="horizontal"
                android:padding="20sp">

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="86dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="147dp"
                        android:layout_height="37dp"
                        android:text="09"
                        android:textSize="23dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09"
                        android:textSize="23dp"

                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="83dp">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="89dp"
                    android:layout_height="47dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="185dp"
                    android:text="التوقيت"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="51dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="-235dp"
                    android:layout_toLeftOf="@+id/textView45"
                    app:srcCompat="@drawable/time" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:orientation="horizontal"
                android:padding="20sp">

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="86dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:00"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/textView51"
                        android:layout_width="147dp"
                        android:layout_height="37dp"
                        android:text="AM"
                        android:textSize="23dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:textSize="23dp"

                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="83dp">

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="89dp"
                    android:layout_height="47dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="185dp"
                    android:text="الموقع"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView61"
                    android:layout_width="51dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="-235dp"
                    android:layout_toLeftOf="@+id/textView60"
                    app:srcCompat="@drawable/loc_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView70"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/choose_loc"
                android:text="اختر موقعك"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_order"
                android:text="ابدأ الطلب"
                android:textSize="30dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>